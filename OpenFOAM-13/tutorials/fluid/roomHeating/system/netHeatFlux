Description
    Calculates the total wallHeatFlux through the entire boundary, i.e. all
    patches.

\*---------------------------------------------------------------------------*/

type            surfaceFieldValue;
libs            ( "libfieldFunctionObjects.so" );
log             no;
writeFields     no;
patch           ".*";
operation       areaIntegrate;
fields          (wallHeatFlux);
writeControl    outputTime;

