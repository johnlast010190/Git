# Script
#     foamNew
#
# Description
#     Create a new standard OpenFOAM source or template file
#
#------------------------------------------------------------------------------
usage() {
    exec 1>&2
    while [ "$#" -ge 1 ]; do echo "$1"; shift; done
    cat<<USAGE
Usage: ${0##*/} <type> {args}

* create a new standard OpenFOAM source or template file

type:
    -s | -source | source
    -t | -template | template

USAGE
    exit 1
}


# this implicitly covers a lone -help, but let other scripts handle the rest
[ "$#" -gt 1 ] || usage

case "$1" in
(-s | -source | source)
    shift
    $HELYX_PROJECT_DIR/etc/codeTemplates/source/foamNewSource "$@"
    ;;
(-t | -template | template)
    shift
    $HELYX_PROJECT_DIR/etc/codeTemplates/template/foamNewTemplate "$@"
    ;;
(*)
    usage "unknown type '$1'"
    ;;
esac

#------------------------------------------------------------------------------
