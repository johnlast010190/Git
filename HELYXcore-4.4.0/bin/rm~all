# Script
#     rm~all
#
# Description
#     remove all *~ files
#------------------------------------------------------------------------------

# default is pwd
if [ "$#" -eq 0 ]
then
    set -- .
elif [ "$1" = "-h" -o "$1" = "-help" ]
then
    exec 1>&2
    echo "Usage: ${0##*/} [dir1] .. [dirN]"
    echo "    remove all *~ files"
    exit 1
fi


for i
do
    if [ -d "$i" ]
    then
        echo "removing all *~ files: $i" 1>&2
        find $i \( -name '*~' -o -name '.*~' \) -type f -delete -print
    else
        echo "no directory: $i" 1>&2
    fi
done

#------------------------------------------------------------------------------
