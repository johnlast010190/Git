FoamFile
{
    version     2.0;
    format      binary;
    class       dictionary;
    arch        "LSB;label=32;scalar=64";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     helyxSolve;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.22528;

deltaT          3.2e-05;

writeControl    timeStep;

writeInterval   100;

purgeWrite      0;

writeFormat     binary;

writePrecision  10;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

graphFormat     raw;

runTimeModifiable yes;

libs            1 ( "" );

adjustTimeStep  no;

maxCo           1;

maxDeltaT       1;

functions
{
    vr1
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       yes;
        fields          ( U p T );
        executeControl  timeStep;
        type            volumeReport;
        regions         ( region0 );
    }
    probes
    {
        functionObjectLibs ( "libsampling.so" );
        enabled         true;
        probeLocations  ( ( 3 2 0 ) ( 3 -2 0 ) );
        fields          ( p );
        executeControl  timeStep;
        type            probes;
    }
}


