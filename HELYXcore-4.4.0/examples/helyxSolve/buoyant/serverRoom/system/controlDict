FoamFile
{
    version     2.0;
    format      binary;
    class       dictionary;
    arch        "LSB;label=32;scalar=64";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     helyxSolve;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         10;

deltaT          constant 0.05;

writeControl    runTime;

writeInterval   1;

purgeWrite      0;

writeFormat     binary;

writePrecision  10;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

graphFormat     raw;

runTimeModifiable yes;

libs            1 ( "" );

adjustTimeStep  false;

maxCo           1;

maxDeltaT       1;

writeEndTime    true;

functions
{
    VR
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       yes;
        fields          ( T U p );
        executeControl  timeStep;
        type            volumeReport;
        regions         ( region0 );
        writeControl    timeStep;
        writeInterval   1;
        executeInterval 1;
    }
    SR-server_in
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       yes;
        weighting       flux;
        fluxName        phi;
        fields          ( T U );
        surfaces        ( { type patch ; name s_in ; } );
        constraints     ( { type boundBox ; min ( -1000 -1000 -1000 ) ; max ( 1000 1000 1000 ) ; keepInside true ; } );
        executeControl  timeStep;
        type            surfaceReport;
        regions         ( region0 );
        homogeneity     false;
        writeControl    timeStep;
        writeInterval   1;
        executeInterval 1;
    }
    SR-server_out
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       yes;
        weighting       flux;
        fluxName        phi;
        fields          ( T U );
        surfaces        ( { type patch ; name s_out ; } );
        constraints     ( );
        executeControl  timeStep;
        type            surfaceReport;
        regions         ( region0 );
        homogeneity     false;
        writeControl    timeStep;
        writeInterval   1;
        executeInterval 1;
    }
}


