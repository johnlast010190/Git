FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     helyxSolve;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.2;

deltaT          0.001;

writeControl    adjustableRunTime;

writeInterval   0.1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

graphFormat     raw;

runTimeModifiable true;

libs            1 ( "" );

adjustTimeStep  true;

maxCo           0.8;

maxDeltaT       1;

functions
{
    VR
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       yes;
        fields          ( U w T p k omega );
        executeControl  onEnd;
        type            volumeReport;
        writeControl    onEnd;
        outputFileFormat tsv;
    }
    SR
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       true;
        weighting       area;
        fluxName        phi;
        fields          ( T w filmMass );
        surfaces        ( { type patch ; name human ; } );
        constraints     ( );
        executeControl  onEnd;
        type            surfaceReport;
        writeControl    onEnd;
        outputFileFormat tsv;
    }
}


