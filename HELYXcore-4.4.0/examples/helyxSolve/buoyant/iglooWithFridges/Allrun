#!/bin/bash
cd ${0%/*} || exit 1    # Run from this directory
set -e                  # Exit immediately if a command fails

#------------------------------------------------------------------------------

# Copy input surface from resources directory
mkdir -p constant/triSurface
cp "$HELYX_TUTORIALS"/resources/geometry/iglooFridge/* constant/triSurface/

# Mesh
helyxRun blockMesh

cp system/helyxHexMesh_fvSchemes system/fvSchemes
cp system/helyxHexMesh_fvSolution system/fvSolution
helyxRun helyxHexMesh -overwrite 

# Setup
helyxRun caseSetup

# Run
helyxRun helyxSolve

# Create dummy file for ParaView visualisation
touch iglooWithFridges.foam

#------------------------------------------------------------------------------
