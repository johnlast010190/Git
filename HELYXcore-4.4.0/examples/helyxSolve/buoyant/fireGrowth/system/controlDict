FoamFile
{
    version     2.0;
    format      binary;
    class       dictionary;
    arch        "LSB;label=32;scalar=64";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     helyxSolve;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         10;

deltaT          constant 0.2;

writeControl    runTime;

writeInterval   1;

purgeWrite      0;

writeFormat     binary;

writePrecision  10;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

graphFormat     raw;

runTimeModifiable yes;

libs            2 ( "" "" );

adjustTimeStep  false;

maxCo           0;

maxDeltaT       0;

writeEndTime    true;

maxAlphaCo      0;

minDeltaT       0;

functions
{
    VR-fire
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       yes;
        fields          ( T );
        executeControl  timeStep;
        type            volumeReport;
        sets            
        (
            zoneToCell
            {
                name            fire;
            }

        )
;
        regions         ( region0 );
        writeControl    timeStep;
        writeInterval   1;
        executeInterval 1;
    }
    VR
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       yes;
        fields          ( T U k nut omega p rho );
        executeControl  timeStep;
        type            volumeReport;
        regions         ( region0 );
        writeControl    timeStep;
        writeInterval   1;
        executeInterval 1;
    }
}


