            {
                buoyancyModel Boussinesq;
                buoyancyModelCoeffs
                {
                    rho0 1.225;
                    beta 0.00333;
                    T0 288.15;
                }
            }
        }
        constant
        {
            g
            {
                dimensions      [ 0 1 -2 0 0 0 0 ];
                value           ( 0 -9.81 0 );
            }
        }
        fields
        {
            U
            {
                initialisation
                {
                    type            potentialFlow;
                }
            }
            p
            {
                initialisation
                {
                    type            buoyantPressure;
                    initialValue    uniform 0;
                }
            }
            T
            {
                initialisation
                {
                    type            fixedValue;
                    value           uniform 288.15;
                }
            }
            k
            {
                initialisation
                {
                    type            turbulentIL;
                    I               0.06;
                    L               0.0018;
                    Uref            0.57;
                }
            }
            omega
            {
