FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      caseSetupDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

global
{
    regionGroups ( fluids ( default ) solids ( solid ) );

    system
    {
        controlDict
        {
            application     helyxSolve;
            startFrom       startTime;
            startTime       0;
            stopAt          endTime;
            endTime         1000;
            deltaT          1;
            writeControl    timeStep;
            writeInterval   100;
            purgeWrite      10;
        }
    }

    functions
    {
        VR-Tegg
        {
            type             volumeReport;
            fields           ( T );
            executeControl   onEnd;
            writeControl     onEnd;
            outputFileFormat tsv;
        }
        wallHeatFlux-fluid
        {
            type wallHeatFlux;
            kappaMethod fluidThermo;
            region default;
            libs ( "libfieldFunctionObjects.so" );
        }
        wallHeatFlux-solid
        {
            type wallHeatFlux;
            kappaMethod solidThermo;
            region solid;
            libs ( "libfieldFunctionObjects.so" );
        }
    }
}

regions
{
    default
    {
        state ( steady ras energy radiation );

        materials (air);

        materialProperties
        {
            air
            {
                equationOfState perfectGas;
                buoyancyModel   rhoModel;
            }
        }

        turbulenceModel laminar;

        constant
        {
            g
            {
                value ( 0 0 -9.81);
            }
        }

        boundaryMesh
        {
            chamber_inlet {type inlet;}
            chamber_outlet {type outlet;}
            chamber_walls {type wall;}
            ovoid
            {
                type            mappedWall;
                sampleMode      nearestPatchFaceAMI;
                sampleRegion    solid;
                samplePatch     ovoid;
            }
        }

        fields
        {
            T{ initialisation{type fixedValue; value uniform 282.11;} }
            p{ initialisation{type buoyantPressure;} }
            U{ initialisation{type fixedValue; value uniform (0.01 0.0 0.0);} }
        }

        boundaryConditions
        {
            chamber_outlet
            {
                p
                {
                    type            totalPressure;
                    p0              uniform 0;
                    addStaticHead   yes;
                    value           uniform 0;
                }
                T
                {
                    type        inletOutlet;
                    inletValue  uniform 282.11;
                    value       uniform 282.11;
                }
            }
            chamber_inlet
            {
                p
                {
                    type            fixedFluxPressure;
                    value           uniform 0;
                }
                T
                {
                    type            fixedValue;
                    value           uniform 282.11;
                }
                U
                {
                    type            fixedValue;
                    value           uniform (0.01 0 0);
                }
            }
        }

    }

    solid
    {
        state ( steady solid radiationSolid );

        materials ( eggMaterial );

        materialProperties
        {
            eggMaterial
            {
                materialName    eggMaterial;

                materialType    solid;
                thermodynamics  hConst;
                equationOfState rhoConst;
                energy          sensibleEnthalpy;
                molWeight       50;

                kappaModel      constSolid;
                kappaModelCoeffs
                {
                    kappa   0.44;
                }

                thermodynamicsCoeffs
                {
                    Hf      0;
                    Cp      2569.613;
                }

                equationOfStateCoeffs
                {
                    rho     1037;
                }
            }
        }

        fields
        {
            T {initialisation{type fixedValue; value uniform 294.45;} }
        }

        boundaryConditions
        {
            ovoid
            {
                T //optional - included here for example of thicknessLayers and conductivityLayers
                {
                    type            regionCoupledEnergyFlux;
                    value           uniform 294.45;
                    //thicknessLayers (1e-3);
                    //conductivityLayers (0.02);
                }
            }
        }

        system
        {
            fvOptions
            {
                heatSource
                {
                    type scalarSemiImplicitSource;
                    active true;
                    scalarSemiImplicitSourceCoeffs
                    {
                        selectionMode all;
                        volumeMode absolute;
                        injectionRateSuSp
                        {
                            T (0.2 0); // Heating in W
                        }
                    }
                }
            }
        }

        boundaryMesh
        {
            ovoid
            {
                type            mappedWall;
                sampleMode      nearestPatchFaceAMI;
                sampleRegion    default;
                samplePatch     ovoid;
            }
        }

        constant
        {
            radiationProperties
            {
                radiationModel  opaqueSolid;

                absorptionEmissionModel constant;

                constantCoeffs
                {
                    absorptivity 0.8;
                    emissivity 0.8;
                    E 0;
                }
            }
        }
    }
}


