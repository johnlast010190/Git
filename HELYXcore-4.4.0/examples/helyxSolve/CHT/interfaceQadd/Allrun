#!/bin/bash
cd "${0%/*}" || exit 1    # Run from this directory
set -e                    # Exit immediately if a command fails

#------------------------------------------------------------------------------

# Copy input surface from resources directory
mkdir -p constant/triSurface
cp $HELYX_TUTORIALS/resources/geometry/interfaceQadd/* constant/triSurface/

# Create mesh
helyxRun helyxHexMesh

# Split mesh into multiple regions
helyxRun splitMeshRegions -overwrite -zoneToRegionMap '( ( solid ( solid ) ) )'

# Setup
helyxRun caseSetup

# Run
helyxRun helyxSolve

# Create dummy file for ParaView visualisation
touch interfaceQadd.foam

#------------------------------------------------------------------------------
