{
    features
    (
    );
    refinementSurfaces
    {
        pellet
        {
            level ( 3 3 );
            faceType internal;
            faceZone pellet;
            cellZone pellet;
            cellZoneInside inside;
            baffleChecks true;
        }
    }

    refinementRegions
    {
        pellet
        {
            mode distance;
            levels ( (0.02 3) (0.1 2) (0.2 1) );
        }
    }

    locationInMesh ( 0.5 0.2 -0.005 );
}

addLayersControls
{
    layers
    {
