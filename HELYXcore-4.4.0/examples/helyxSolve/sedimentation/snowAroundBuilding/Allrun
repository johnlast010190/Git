#!/bin/bash
cd "${0%/*}" || exit 1    # Run from this directory
set -e                    # Exit immediately if a command fails

#------------------------------------------------------------------------------

# Create simple planar stl
./createSTL

# Mesh generation
helyxRun blockMesh

# Decompose the mesh
helyxRun decomposePar

# Setup the case
helyxRun caseSetup

# Run
helyxRun helyxSolve

# Create dummy file for ParaView visualisation
touch snowAroundBuilding.foam

#------------------------------------------------------------------------------
