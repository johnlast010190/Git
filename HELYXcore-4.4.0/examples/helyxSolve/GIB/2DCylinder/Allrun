#!/bin/bash
cd "${0%/*}" || exit 1    # Run from this directory
set -e                    # Exit immediately if a command fails

#------------------------------------------------------------------------------

# Copy STL file
mkdir -p constant/triSurface
cp "$HELYX_TUTORIALS"/resources/geometry/GIBgeometries/cylinder.stl constant/triSurface/

# Mesh in series
helyxRun blockMesh

# Decompose case (to run in parallel)
# To run in serial, comment the following line
helyxRun decomposePar

# Create GIB interface
helyxRun modifyGIBBoundary -addGIB

# Setup
helyxRun caseSetup

# Run
helyxRun helyxSolve

# Create dummy file for ParaView visualisation
touch 2DCylinder.foam

#------------------------------------------------------------------------------
