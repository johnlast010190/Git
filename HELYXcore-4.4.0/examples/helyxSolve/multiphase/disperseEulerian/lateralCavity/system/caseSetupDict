FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      caseSetupDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

global
{
    system
    {
        controlDict
        {
            application      helyxSolve;
            startFrom        startTime;
            startTime        0;
            stopAt           endTime;
            endTime          200.0;
            writeInterval    200.0;
        }
    }
    functions
    {
        VR
        {
            type volumeReport;
            fields ( U p);
            writeControl onEnd;
            executeControl onEnd;
            outputFileFormat tsv;
        }
    }
}

regions
{
    region0
    {
        state (steady ras);
        turbulenceModel laminar;
        materials (oil);
        materialProperties
        {
            oil
            {
                materialType    fluid;
                thermodynamics  hConst;
                equationOfState rhoConst;

                Prt [0 0 0 0 0 0 0] 0.85;
                lambda [1 1 -3 -1 0 0 0] 0.024;

                equationOfStateCoeffs
                {
                    rho        500;
                }
                thermodynamicsCoeffs
                {
                    Cp          4195;
                    Hf          0;
                }
                muModel scalarFunction1;
                muModelCoeffs
                {
                    mu          5000;
                }
            }
        }

        system
        {
            fvSchemes
            {
                gradSchemes
                {
                    grad(p) taylorGauss linear;
                    default Gauss linear;
                    grad(U) cellLimited Gauss linear 1.0;
                }
                divSchemes
                {
                    div(phi,U) bounded Gauss linearUpwindV gradU;
                }
            }
            fvSolution
            {
                relaxationFactors
                {
                    fields
                    {
                        p 1;
                    }
                    equations
                    {
                        U 0.9;
                    }

                }
                SIMPLE
                {
                    consistent true;
                    residualControl
                    {
                        U 1.0E-12;
                        p 1.0E-12;
                    }

                }
                cache
                {
                    grad(U) ;
                }
            }
        }
        fields
        {
            U
            {
                initialisation
                {
                    type fixedValue;
                    value uniform ( 0.0 0.0 0.0 );
                }
            }
        }
        boundaryConditions
        {
            side1
            {
                U
                {
                    type fixedValue;
                    value uniform ( 0 0 1 );
                }
            }
        }
    }
}


