#!/bin/bash
cd "${0%/*}" || exit 1    # Run from this directory
set -e                    # Exit immediately if a command fails

#------------------------------------------------------------------------------

# Create mesh
helyxRun blockMesh
helyxRun topoSet
helyxRun subsetMesh -overwrite c0 -patch floatingObject

# Setup
helyxRun caseSetup

# Run
helyxRun helyxSolve

# Create dummy file for ParaView visualisation
touch floatingObject.foam

#------------------------------------------------------------------------------
