#!/bin/bash
cd "${0%/*}" || exit 1    # Run from this directory
set -e                    # Exit immediately if a command fails

#------------------------------------------------------------------------------

# Create mesh
helyxRun blockMesh

helyxRun -l log.topoSet.1 topoSet -dict system/topoSetDict.1
helyxRun -l log.refineMesh.1 refineMesh -overwrite
helyxRun -l log.topoSet.2 topoSet -dict system/topoSetDict.2
helyxRun -l log.refineMesh.2 refineMesh -overwrite

# Setup
helyxRun caseSetup

# Run
helyxRun helyxSolve

# Create dummy file for ParaView visualisation
touch nozzleFlow2D.foam

#------------------------------------------------------------------------------
