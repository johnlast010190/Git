castellatedMesh true;
snap            true;
addLayers       false;

geometry
{
    wigley-scaled-oriented.stl
    {
        type triSurfaceMesh;
        name hull;

        patchInfo
        {
            type wall;
        }
    }
    box1
    {
        type searchableBox;
        min (-1 -0.5 -0.25);
        max ( 1  0.5  1 );
    }
    box2
    {
        type searchableBox;
        min (-1 -0.2 -0.15);
        max ( 0.75 0.2 1);
    }
    box3
    {
        type searchableBox;
        min (-10 -10 -0.03);
        max ( 10 10 1);
    }
};

castellatedMeshControls
{
    refinementSurfaces
    {
        hull
        {
            level (3 3);
        }
    }
    refinementRegions
    {
