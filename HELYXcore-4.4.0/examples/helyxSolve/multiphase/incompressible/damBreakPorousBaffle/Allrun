#!/bin/bash
cd "${0%/*}" || exit 1    # Run from this directory
set -e                    # Exit immediately if a command fails

# tags: asan

#------------------------------------------------------------------------------

# Create dummy file for ParaView visualisation
touch damBreakPorousBaffle.foam

# Mesh in series
helyxRun blockMesh

# Create baffles
helyxRun createBaffles -overwrite

# Setup
helyxRun caseSetup

# Run
helyxRun helyxSolve

