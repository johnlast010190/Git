FoamFile
{
    version     2.0;
    format      binary;
    class       dictionary;
    arch        "LSB;label=32;scalar=64";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     helyxSolve;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         500;

deltaT          constant 1;

writeControl    timeStep;

writeInterval   100;

purgeWrite      2;

writeFormat     binary;

writePrecision  10;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

graphFormat     raw;

runTimeModifiable yes;

libs            ( "" );

writeEndTime    true;

adjustTimeStep  false;

maxCo           0;

maxAlphaCo      0;

minDeltaT       0;

maxDeltaT       0;

functions
{
    VR
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       yes;
        fields          ( U p );
        executeControl  timeStep;
        type            volumeReport;
        regions         ( region0 );
        writeControl    timeStep;
        writeInterval   1;
        executeInterval 1;
    }
    SR_fan1
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       yes;
        weighting       flux;
        fluxName        phi;
        fields          ( U p );
        surfaces        ( { type patch ; name fan1 ; } );
        constraints     ( { type boundBox ; min ( -1000 -1000 -1000 ) ; max ( 1000 1000 1000 ) ; keepInside true ; } );
        executeControl  timeStep;
        type            surfaceReport;
        regions         ( region0 );
        homogeneity     false;
        backFlowReport  false;
        directionAware  true;
        writeControl    timeStep;
        writeInterval   1;
        executeInterval 1;
    }
    SR_fan2
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       yes;
        weighting       flux;
        fluxName        phi;
        fields          ( U p );
        surfaces        ( { type patch ; name fan2 ; } );
        constraints     ( { type boundBox ; min ( -1000 -1000 -1000 ) ; max ( 1000 1000 1000 ) ; keepInside true ; } );
        executeControl  timeStep;
        type            surfaceReport;
        regions         ( region0 );
        homogeneity     false;
        backFlowReport  false;
        directionAware  true;
        writeControl    timeStep;
        writeInterval   1;
        executeInterval 1;
    }
    SR_opening
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       yes;
        weighting       flux;
        fluxName        phi;
        fields          ( U p );
        surfaces        ( { type patch ; name opening ; } );
        constraints     ( { type boundBox ; min ( -1000 -1000 -1000 ) ; max ( 1000 1000 1000 ) ; keepInside true ; } );
        executeControl  timeStep;
        type            surfaceReport;
        regions         ( region0 );
        homogeneity     false;
        backFlowReport  false;
        directionAware  true;
        writeControl    timeStep;
        writeInterval   1;
        executeInterval 1;
    }
    VP
    {
        functionObjectLibs ( "libsampling.so" );
        enabled         true;
        probeLocations  ( ( 0.5 1.8 0 ) );
        fields          ( p );
        executeControl  timeStep;
        type            probes;
        regions         ( region0 );
        writeControl    timeStep;
        writeInterval   1;
        executeInterval 1;
    }
    ZF
    {
        functionObjectLibs ( "libforces.so" );
        nAveragingSteps 1;
        verbose         true;
        logToFile       true;
        executeControl  timeStep;
        type            zoneForces;
        regions         ( region0 );
        writeControl    timeStep;
        writeInterval   1;
        executeInterval 1;
    }
}


