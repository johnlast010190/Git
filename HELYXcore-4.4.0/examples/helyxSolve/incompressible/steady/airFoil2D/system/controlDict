FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     helyxSolve;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         500;

deltaT          1;

writeControl    timeStep;

writeInterval   500;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

graphFormat     raw;

runTimeModifiable yes;

libs            1 ( "" );

functions
{
    LD
    {
        patches         ( walls );
        functionObjectLibs ( "libforces.so" );
        porosity        true;
        nAveragingSteps 1;
        outputRegionData true;
        binData
        {
            nBins           100;
            axis            ( 1 0 0 );
        }
        maxCp           1e+15;
        minCp           -1e+15;
        Uinf            ( 25.75 3.62 0 );
        rhoInf          1.205;
        liftDirection   ( 0 1 0 );
        dragDirection   ( 1 0 0 );
        referenceArea   1.75;
        referenceLength 35;
        referencePoint  ( 0 0 0 );
        wheelbase       1;
        executeControl  onEnd;
        type            liftDrag;
        regions         ( region0 );
        Pref            0;
        writeControl    onEnd;
        writeInterval   1;
        executeInterval 1;
        outputFileFormat tsv;
    }
}


