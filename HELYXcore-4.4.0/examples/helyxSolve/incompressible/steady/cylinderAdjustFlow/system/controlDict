FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     helyxSolve;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         50;

deltaT          1;

writeControl    timeStep;

writeInterval   50;

purgeWrite      0;

writeFormat     ascii;

writePrecision  10;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

graphFormat     raw;

runTimeModifiable yes;

libs            1 ( "" );

functions
{
    FP1
    {
        functionObjectLibs ( "libfieldFunctionObjects.so" );
        operations      ( { operation Urel ; write true ; } );
        executeControl  onEnd;
        writeControl    onEnd;
        type            fieldProcess;
        calculationControl continuous;
    }
    residuals
    {
        type            residuals;
        functionObjectLibs ( "libutilityFunctionObjects.so" );
        timeStart       0;
        executeControl  timeStep;
        executeInterval 25;
        writeControl    writeTime;
        writeInterval   25;
        fields          ( p k omega U );
        writeFields     false;
    }
    SR1
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       true;
        weighting       area;
        fluxName        phi;
        fields          ( Urel U p );
        surfaces        ( { type patch ; name fixedOutlet ; } );
        constraints     ( );
        executeControl  onEnd;
        type            surfaceReport;
        writeControl    onEnd;
        regions         1 ( region0 );
        outputFileFormat tsv;
    }
}


