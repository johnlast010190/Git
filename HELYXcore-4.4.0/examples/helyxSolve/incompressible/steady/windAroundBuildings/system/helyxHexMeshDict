#includeEtc "caseDicts/mesh/generation/helyxHexMeshDict.cfg"

castellatedMesh on;
snap            on;
addLayers       off;

blockType block;

geometry
{
    buildings.obj
    {
        type triSurfaceMesh;
        name buildings;
    }
    refinementBox
    {
        type searchableBox;
        min  (  0   0   0);
        max  (250 180  90);
    }
};

castellatedMeshControls
{
    features
    (
    );

    refinementSurfaces
    {
        buildings
        {
            level (3 3);
            patchInfo { type wall; }
        }
    }

    refinementRegions
    {
        refinementBox
        {
            mode inside;
            levels ((1E15 2));
        }
    }

    locationInMesh (1 1 1);
}

snapControls
{
    featureEdges {}
}

addLayersControls
{
    layers
    {
        "CAD.*"
        {
            nSurfaceLayers 2;
        }
    }
}


