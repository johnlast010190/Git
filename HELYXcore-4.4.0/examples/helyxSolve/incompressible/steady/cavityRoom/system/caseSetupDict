FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      caseSetupDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

global
{
    modificationSwitches
    {
        resetInternalFields true;
        resetBoundaryFields true;
        resetSystemDicts true;
        resetConstDicts true;
        resetBoundaryMesh true;
    }
    system
    {
        controlDict
        {
            application     helyxSolve;
            startFrom       latestTime;
            startTime       0;
            stopAt          endTime;
            endTime         100;
            deltaT          1;
            writeControl    timeStep;
            writeInterval   100;
            purgeWrite      0;
            writeFormat     ascii;
            writePrecision  10;
            writeCompression uncompressed;
            timeFormat      general;
            timePrecision   6;
            graphFormat     raw;
            runTimeModifiable true;
        }
    }
    functions
    {
        VP
        {
            functionObjectLibs ( "libsampling.so" );
            type probes;
            fields (p);
            probeLocations ((3 1 0));
            executeControl onEnd;
            writeControl onEnd;
            outputFileFormat tsv;
        }
    }
}

regions
{
    region0
    {
        boundaryMesh
        {
            Inlet
            {
                type            inlet;
            }
            Outlet
            {
                type            outlet;
            }
            Walls
            {
                type            wall;
            }
            Side1
            {
                type            empty;
            }
            Side2
            {
                type            empty;
            }
        }
        state           ( steady ras );
        turbulenceModel kOmegaSST;
        materials       ( air );
        materialProperties
        {
            air
            {
                rho  [ 1 -3 0 0 0 0 0 ] 1.205;
                nu   [ 0 2 -1 0 0 0 0 ] 1.53e-05;
            }
        }
        fields
        {
            U
            {
                type            potentialFlow;
            }
            p
            {
                type            potentialFlow;
            }
            k
            {
                type            Prandtl;
            }
            omega
            {
                type            Prandtl;
            }
            epsilon
            {
                type            Prandtl;
            }
        }
        boundaryConditions
        {
            Outlet
            {
                p
                {
                    type            fixedValue;
                    value           uniform 0;
                }
            }
            Inlet
            {
                U
                {
                    type            fixedValue;
                    value           uniform ( 0.455 0 0 );
                }
                k
                {
                    type            fixedValue;
                    value           uniform 0.00049686;
                }
                omega
                {
                    type            fixedValue;
                    value           uniform 14.7423;
                }
                epsilon
                {
                    type            fixedValue;
                    value           uniform 0.0006592373;
                }
            }
        }
    }
}


