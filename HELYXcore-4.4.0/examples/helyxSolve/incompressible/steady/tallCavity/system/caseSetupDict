FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      caseSetupDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

global
{
    modificationSwitches
    {
        resetInternalFields true;
        resetBoundaryFields true;
        resetSystemDicts true;
        resetConstDicts true;
        resetBoundaryMesh true;
    }
    system
    {
        controlDict
        {
            application     helyxSolve;
            startFrom       latestTime;
            startTime       0;
            stopAt          endTime;
            endTime         100;
            deltaT          1;
            writeControl    runTime;
            writeInterval   100;
            purgeWrite      0;
            writeFormat     ascii;
            writePrecision  6;
            writeCompression uncompressed;
            timeFormat      general;
            timePrecision   6;
        }
    }
    functions
    {
        VP
        {
            functionObjectLibs ( "libsampling.so" );
            type    probes;
            fields  (p);
            probeLocations
            ((0.03 1.05 0));
            executeControl  onEnd;
            writeControl    onEnd;
            outputFileFormat tsv;
        }
    }
}

regions
{
    region0
    {
        boundaryMesh
        {
            ffminy
            {
                type            wall;
            }
            ffmaxy
            {
                type            wall;
            }
            cold
            {
                type            wall;
            }
            hot
            {
                type            wall;
            }
        }
        state           ( steady ras energy );
        turbulenceModel kOmegaSST;
        materials       ( air );
        materialProperties
        {
            air
            {
                buoyancyModel Boussinesq;
                buoyancyModelCoeffs
                {
                    rho0 1.2;
                    beta 0.00333;
                    T0 288.25;
                }
            }
        }
        constant
        {
            g
            {
                dimensions      [ 0 1 -2 0 0 0 0 ];
                value           ( 0 -9.81 0 );
            }
        }
        fields
        {
            U
            {
                initialisation
                {
                    type            fixedValue;
                    value           uniform ( 0 0 0 );
                }
            }
            p
            {
                initialisation
                {
                    type            fixedValue;
                    value           uniform 0.0;
                }
            }
            T
            {
                initialisation
                {
                    type            fixedValue;
                    value           uniform 288.25;
                }
            }
            k
            {
                initialisation
                {
                    type            turbulentIL;
                    I               0.4;
                    L               0.5;
                    Uref            1;
                }
            }
            omega
            {
                initialisation
                {
                    type            turbulentIL;
                    I               0.4;
                    L               0.5;
                    Uref            1;
                }
            }
        }
        boundaryConditions
        {
            cold
            {
                T
                {
                    type            fixedValue;
                    value           uniform 288.25;
                }
            }
            hot
            {
                T
                {
                    type            fixedValue;
                    value           uniform 307.85;
                }
            }
            ffminy
            {
                T
                {
                    type            zeroGradient;
                }
            }
            ffmaxy
            {
                T
                {
                    type            zeroGradient;
                }
            }
        }
    }
}


