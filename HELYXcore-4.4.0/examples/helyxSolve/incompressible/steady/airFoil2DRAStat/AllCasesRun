#!/bin/bash
cd "${0%/*}" || exit 1    # Run from this directory
set -e                    # Exit immediately if a command fails

#------------------------------------------------------------------------------

i=1;
for ((aoa=0; aoa<36; aoa++))
do
    printf "\nAoA = "$aoa"\n"
    mkdir -p aoa$aoa/
    cp -r system/ aoa$aoa/
    cp -r constant/ aoa$aoa/
    head -n $i system/windDirections | tail -n 1 > aoa$aoa/system/windVector
    let i++;

    cd aoa$aoa
    helyxRun caseSetup
    helyxRun helyxSolve
    cd ../
done

#------------------------------------------------------------------------------
