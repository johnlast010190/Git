FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      createPatchDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Do a synchronisation of coupled points after creation of any patches.
// Note: this does not work with points that are on multiple coupled patches
//       with transformations (i.e. cyclics).
pointSync false;

// Patches to create
patches
(
    {
        name            inlet;
        patchInfo
        {
            type        patch;
        }
        constructFrom   set;
        set             inletFaces;
    }

    {
        name            outlet;
        patchInfo
        {
            type        patch;
        }
        constructFrom   set;
        set             outletFaces;
    }
);


