#!/bin/bash
cd "${0%/*}" || exit 1    # Run from this directory
set -e                    # Exit immediately if a command fails

#------------------------------------------------------------------------------

# Background mesh
helyxRun blockMesh

# Setup
helyxRun caseSetup

# Run
helyxRun helyxSolve

# Post-processes data from channel flow calculations
ln -f ./system/postChannelDict ./constant/postChannelDict
helyxRun postChannel

# Create dummy file for ParaView visualization
touch channel395.foam

#------------------------------------------------------------------------------
