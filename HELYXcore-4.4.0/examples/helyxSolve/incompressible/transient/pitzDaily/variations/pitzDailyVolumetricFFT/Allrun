#!/bin/bash
cd "${0%/*}" || exit 1    # Run from this directory
set -e                    # Exit immediately if a command fails

# tags: asan

#------------------------------------------------------------------------------

# Create mesh
helyxRun blockMesh

# Setup
helyxRun caseSetup

# Run
helyxRun helyxSolve 

# Volumetric FFT
helyxRun volumetricFFT

# Create dummy file for ParaView visualisation
touch pitzDailyVolumetricFFT.foam

#------------------------------------------------------------------------------
