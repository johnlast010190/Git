FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     helyxSolve;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         0.06;

deltaT          constant 0.001;

writeControl    runTime;

writeInterval   0.001;

purgeWrite      0;

writeFormat     ascii;

writePrecision  10;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

graphFormat     raw;

runTimeModifiable true;

libs            ( "" );

adjustTimeStep  false;

maxCo           0;

maxDeltaT       0;

writeEndTime    true;

maxAlphaCo      0;

functions
{
    VR
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       true;
        fields          ( U p );
        executeControl  timeStep;
        type            volumeReport;
        regions         ( region0 );
        writeControl    timeStep;
        writeInterval   1;
        executeInterval 1;
    }
    FR
    {
        functionObjectLibs ( "libforces.so" );
        directForceDensity false;
        p               p;
        U               U;
        rhoName         rhoInf;
        rhoInf          1.205;
        pRef            0;
        CofR            ( 0 0 0 );
        patches         ( blade_edges blade_faces hub );
        executeControl  timeStep;
        type            forces;
        regions         ( region0 );
        writeControl    timeStep;
        writeInterval   1;
        executeInterval 1;
    }
}


