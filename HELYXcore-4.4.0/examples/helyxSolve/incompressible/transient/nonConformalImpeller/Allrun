#!/bin/bash
cd "${0%/*}" || exit 1    # Run from this directory
set -e                    # Exit immediately if a command fails

#------------------------------------------------------------------------------

# Mesh in series
helyxRun blockMesh

# Decompose geometry
helyxRun decomposePar

# Setup
helyxRun caseSetup

# Run
helyxRun helyxSolve

# Reconstruct geometry and fields
helyxRun -serial reconstructParMesh -constant
helyxRun -serial reconstructPar -withZero

# Create dummy file for ParaView visualisation
touch nonConformalImpeller.foam

#------------------------------------------------------------------------------
