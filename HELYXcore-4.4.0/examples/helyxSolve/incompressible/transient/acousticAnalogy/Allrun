#!/bin/bash
cd "${0%/*}" || exit 1    # Run from this directory
set -e                    # Exit immediately if a command fails

# tags: asan

#------------------------------------------------------------------------------
   
mkdir -p constant/triSurface
cp $HELYX_TUTORIALS/resources/geometry/ovoid.stl.gz constant/triSurface/

# Background mesh in series
helyxRun blockMesh

# Decompose case
helyxRun decomposePar

# Mesh in parallel
helyxRun helyxHexMesh

# Setup
helyxRun caseSetup

# Run
helyxRun helyxSolve

# Create dummy file for ParaView visualization
touch acousticAnalogy.foam

#------------------------------------------------------------------------------





