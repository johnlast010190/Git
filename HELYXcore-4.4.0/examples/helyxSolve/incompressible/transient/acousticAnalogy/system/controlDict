FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     helyxSolve;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         0.4;

deltaT          0.001;

writeControl    timeStep;

writeInterval   100;

purgeWrite      5;

writeFormat     ascii;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

graphFormat     raw;

runTimeModifiable yes;

libs            1 ( "" );

adjustTimeStep  no;

maxCo           1;

maxDeltaT       1;

functions
{
    vr1
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       yes;
        fields          ( U p );
        executeControl  onEnd;
        type            volumeReport;
        regions         ( region0 );
        writeControl    onEnd;
        outputFileFormat tsv;
    }
    Curle1
    {
        type            DavidsonCurle;
        functionObjectLibs ( "libutilityFunctionObjects.so" );
        logToFile       true;
        patches         ( ovoid );
        rhoRef          1.225;
        cRef            343;
        executeControl  onEnd;
        writeControl    onEnd;
        observers
        {
            microphone-A
            {
                position        ( -0.2 0 0 );
            }
            microphone-B
            {
                position        ( 0.1 0 0 );
            }
            microphone-C
            {
                position        ( 0.1 0 0.02 );
            }
        }
    }
    FfowcsWilliamsHawkings1
    {
        type            FfowcsWilliamsHawkings;
        functionObjectLibs ( "libutilityFunctionObjects.so" );
        logToFile       true;
        patches         ( ovoid );
        rhoRef          1.225;
        cRef            343;
        executeControl  onEnd;
        writeControl    onEnd;
        observers
        {
            points1
            {
                type            set;
                positions       ( ( -0.2 0 0 ) ( 0.1 0 0 ) ( 0.1 0 0.02 ) );
            }
        }
    }
    fieldBlending
    {
        functionObjectLibs ( "libfieldFunctionObjects.so" );
        executeControl  timeStep;
        writeControl    writeTime;
        type            fieldBlendingFactor;
        blendingSources 
        (
            zonalDES
            {
                type            zonalDES;
                CDES            1;
                minValue        0;
                maxValue        1;
                minCoeff        0;
                maxCoeff        1;
                functionType    cubic;
                write           false;
            }

        )
;
        fieldBlending   
        (
            U
            {
                stabilise       10;
                blendingSources 
                (
                    cfl1
                    {
                        type            cfl;
                        minValue        2;
                        maxValue        4;
                        minCoeff        1;
                        maxCoeff        0;
                        functionType    cubic;
                        phi             phi;
                        rho             rho;
                        write           false;
                    }

                )
;
            }

        )
;
        regions         1 ( region0 );
    }
}


