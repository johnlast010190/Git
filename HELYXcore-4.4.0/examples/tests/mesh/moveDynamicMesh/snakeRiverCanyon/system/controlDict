FoamFile
{
    version     2.0;
    format      binary;
    class       dictionary;
    arch        "LSB;label=32;scalar=64";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     moveDynamicMesh;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         10;

deltaT          1;

writeControl    timeStep;

writeInterval   10;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    VR_mesh
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       true;
        fields          ( aspectRatio determinant nonOrthogonality skewness volumeRatio );
        writeControl    onEnd;
        executeControl  onEnd;
        type            volumeReport;
        outputFileFormat tsv;
    }
}


