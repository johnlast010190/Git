FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

mover
{
    type            motionSolver;
    libs            ( "libfvMeshMovers.so" "libfvMotionSolvers.so" );
    motionSolver    motionSolverList;
    solvers
    {
        rotor1
        {
            solver          solidBody;
            cellZone        rotor;
            referenceFrame  rotation1Frame;
        }
        dualWing1
        {
            // Solve displacement on top of solid-body rotation
            solver          solidBodyDisplacementLaplacian;
            solidBodyDisplacementLaplacianCoeffs
            {
                cellZone       dualWing;
                referenceFrame rotation2Frame;
                diffusivity quadratic inverseDistance (wing2);
            }
        }
    }
}


