#!/bin/bash
cd "${0%/*}" || exit 1    # Run from this directory
set -e                    # Exit immediately if a command fails

#------------------------------------------------------------------------------

# Mesh in parallel
helyxRun -parallel helyxHexMesh

# Mesh report
helyxRun checkMesh -writeAllMetrics -latestTime
helyxRun postProcess -fields '( aspectRatio determinant nonOrthogonality skewness volumeRatio )'

# Create dummy file for ParaView visualisation
touch extrudePipes.foam

#------------------------------------------------------------------------------
