        {
            level (2 3);
        }
    }
    refinementRegions
    {
        refineHole
        {
            mode inside;
            levels ((1E15 3));
        }
    }
    locationInMesh (-9.23149e-05 -0.0025 -0.0025);
}

addLayersControls
{
    layers
    {
        "flange_.*"
        {
            nSurfaceLayers 1;
        }
