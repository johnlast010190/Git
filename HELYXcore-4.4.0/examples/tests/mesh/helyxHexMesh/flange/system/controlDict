FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     helyxSolve;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         50;

deltaT          1;

writeControl    timeStep;

writeInterval   20;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    VR_mesh
    {
        functionObjectLibs ( "libreport.so" );
        logToFile       true;
        fields          ( aspectRatio determinant nonOrthogonality skewness volumeRatio );
        executeControl  timeStep;
        type            volumeReport;
        outputFileFormat tsv;
    }
}


