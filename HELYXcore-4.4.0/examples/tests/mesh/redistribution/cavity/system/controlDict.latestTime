FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict.latestTime;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     helyxSolve;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         1.0;

deltaT          0.005;

writeControl    timeStep;

writeInterval   20;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    VR
    {
        outputFileFormat tsv;
        type volumeReport;
        regions ( region0 );
        fields ( U P aspectRatio determinant nonOrthogonality skewness volumeRatio );
        writeControl onEnd;
        executeControl onEnd;
        functionObjectLibs ("libreport.so");
        logToFile yes;
    }
}


