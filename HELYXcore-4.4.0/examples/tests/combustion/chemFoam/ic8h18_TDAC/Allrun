#!/bin/bash
cd "${0%/*}" || exit 1    # Run from this directory
set -e                    # Exit immediately if a command fails

#------------------------------------------------------------------------------

# Convert chemkin files to OpenFOAM format
helyxRun chemkinToFoam  \
         chemkin/chem.inp chemkin/therm.dat chemkin/transportProperties \
         constant/reactions system/speciesThermo

# Run chemFoam
helyxRun chemFoam

# Plot comparation between chemkin II and Helyx
./Allpost

#------------------------------------------------------------------------------

