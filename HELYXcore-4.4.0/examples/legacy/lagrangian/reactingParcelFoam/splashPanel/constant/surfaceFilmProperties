FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      surfaceFilmProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

surfaceFilmModel thermoSingleLayer;
active           true;
region           wallFilmRegion;

viscosity
{
    model        Newtonian;
}

sigma       0.07;

deltaWet    1e-4;

hydrophilic no;

turbulenceModel
{
    model       laminar;
    Cf          0.005;
}

forces
{
    thermocapillary;
}

upperSurfaceModels
{
    heatTransfer
    {
        model    constant;
        c0       1e-8;
    }
}

lowerSurfaceModels
{
    heatTransfer
    {
        model   constant;
        c0      1e-8;
    }
}


