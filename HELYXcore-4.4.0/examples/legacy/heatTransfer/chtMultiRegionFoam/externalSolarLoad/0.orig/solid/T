FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/solid";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 300;

boundaryField
{
    solid_to_domain0
    {
        type            fixedValue;
        value           uniform 300;
    }
    solid_to_air
    {
        type            turbulentTemperatureRadCoupledMixed;
        value           uniform 300;
        Tnbr            T;
        kappaMethod     solidThermo;
        QrNbr           Qr;
        Qr              none;
        kappa           none;
    }
    solid_to_floor
    {
        type            turbulentTemperatureRadCoupledMixed;
        value           uniform 300;
        Tnbr            T;
        kappaMethod     solidThermo;
        QrNbr           none;
        Qr              none;
        kappa           none;
    }
}


