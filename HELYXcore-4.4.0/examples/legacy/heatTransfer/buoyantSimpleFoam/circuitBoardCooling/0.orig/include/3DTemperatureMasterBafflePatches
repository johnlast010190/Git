T
{
    type            thermalBaffle;
    kappaMethod     fluidThermo;
    value           uniform 300;

    region          ${baffleRegion};
    active          yes;

    radiation
    {
        radiationModel          opaqueSolid;
        absorptionEmissionModel none;
        scatterModel            none;
        transmissivityModel     none;
    }

    // New fvMesh (region) information
    # include "extrudeModel"
}

